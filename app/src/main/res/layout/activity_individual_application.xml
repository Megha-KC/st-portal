<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndividualApplicationActivity">

    <View
        android:id="@+id/ind_app_view"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:background="@color/dark_purple" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/dark_purple">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ind_app_profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_dp_background"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ind_app_view"
        android:layout_marginTop="-50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvApplicantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_hint_name"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/email" />
                <TextView
                    android:id="@+id/tvApplicantEmail"
                    android:layout_width="wrap_content"
                    android:width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/dob" />
                <TextView
                    android:id="@+id/tvApplicantDOB"
                    android:layout_width="wrap_content"
                    android:width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/institution_name" />
                <TextView
                    android:id="@+id/tvApplicantInstitution"
                    android:layout_width="wrap_content"
                    android:width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/institution_location" />
                <TextView
                    android:id="@+id/tvApplicantInstLoc"
                    android:layout_width="wrap_content"
                    android:width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/course" />
                <TextView
                    android:id="@+id/tvApplicantCourse"
                    android:layout_width="wrap_content"
                    android:width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/year_of_grad" />
                <TextView
                    android:id="@+id/tvApplicantYearOfGrad"
                    android:layout_width="wrap_content"
                    android:width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/current_address" />
                <TextView
                    android:id="@+id/tvApplicantAddress"
                    android:layout_width="wrap_content"
                    android:width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/routes" />
                <TextView
                    android:id="@+id/tvApplicantRoutes"
                    android:layout_width="wrap_content"
                    android:width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/verify"
                android:background="@color/dark_purple"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:textColor="@color/login_form_details_medium"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>